<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
<!--tmpdir： 当前登录用户的临时文件夹  -->
	<diskStore path="java.io.tmpdir"/>
	
	<!-- timeToIdleSeconds:闲置时间 
		 timeToLiveSeconds:存活时间 -->
	<cache name="account"
		maxElementsInMemory="100"
		eternal="false" 
		timeToIdleSeconds="50"
		timeToLiveSeconds="50"
		overflowToDisk="true"
	/>
	
